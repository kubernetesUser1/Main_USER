<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Application Deployment</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }

    .sidebar {
      height: 100vh;
      width: 220px;
      position: fixed;
      top: 0;
      left: 0;
      background-color: #343a40;
      padding-top: 20px;
    }

    .sidebar a {
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      display: block;
      font-size: 16px;
    }

    .sidebar a:hover {
      background-color: #495057;
    }

    .content {
      margin-left: 230px;
      padding: 20px;
    }

    .chart-card {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      margin-bottom: 20px;
    }

    canvas {
      max-width: 100% !important;
    }
  </style>
</head>

<body>
  <div class="sidebar">
    <a href="#">Home</a>
    <a href="#">Deployments</a>
    <a href="#">Pods</a>
  </div>

  <div class="content">
    <h3 class="mb-4">Application Deployment</h3>

    <!-- CPU and Memory Usage Charts -->
    <div class="row">
      <div class="col-md-6">
        <div class="chart-card">
          <canvas id="cpuChart" height="150"></canvas>
        </div>
      </div>
      <div class="col-md-6">
        <div class="chart-card">
          <canvas id="memoryChart" height="150"></canvas>
        </div>
      </div>
    </div>

    <!-- Workload Status Pie Charts -->
    <div class="row text-center mb-4">
      <div class="col-md-4">
        <div class="chart-card">
          <h6>Deployments</h6>
          <canvas id="deploymentStatusChart" height="150"></canvas>
        </div>
      </div>
      <div class="col-md-4">
        <div class="chart-card">
          <h6>Pods</h6>
          <canvas id="podStatusChart" height="150"></canvas>
        </div>
      </div>
      <div class="col-md-4">
        <div class="chart-card">
          <h6>ReplicaSets</h6>
          <canvas id="replicaSetStatusChart" height="150"></canvas>
        </div>
      </div>
    </div>

    <!-- Category Sections -->
    <div id="databases" class="category">
      <h5>Databases</h5>
      <div class="row">
        <div class="col-md-4">
          <div class="card text-center p-3">
            <img src="https://upload.wikimedia.org/wikipedia/en/d/dd/MySQL_logo.svg" height="50">
            <h6>MySQL</h6>
            <button class="btn btn-sm btn-primary" onclick="navigateToDeploy('MySQL')">Deploy</button>
          </div>
        </div>
        <!-- More DBs -->
      </div>
    </div>

    <div id="message-brokers" class="category">
      <h5>Message Brokers</h5>
      <div class="row">
        <!-- Add your message broker cards here -->
      </div>
    </div>

    <div id="search-engines" class="category">
      <h5>Search Engine</h5>
      <div class="row">
        <!-- Add your search engine card here -->
      </div>
    </div>
  </div>

  <script>
    function navigateToDeploy(applicationName) {
      window.location.href = `deploy.html?application=${encodeURIComponent(applicationName)}`;
    }

    function loadCharts() {
      new Chart(document.getElementById('cpuChart'), {
        type: 'line',
        data: {
          labels: ['12:58', '12:59', '13:00', '13:01', '13:02', '13:03'],
          datasets: [{
            label: 'CPU Usage',
            data: [3, 5, 6, 4, 7, 5],
            backgroundColor: 'rgba(0, 123, 255, 0.2)',
            borderColor: '#007bff',
            borderWidth: 2,
            fill: true
          }]
        },
        options: {
          responsive: true,
          plugins: {
            title: {
              display: true,
              text: 'CPU Usage (Cores)'
            }
          }
        }
      });

      new Chart(document.getElementById('memoryChart'), {
        type: 'bar',
        data: {
          labels: ['12:58', '12:59', '13:00', '13:01', '13:02', '13:03'],
          datasets: [{
            label: 'Memory Usage (MB)',
            data: [1024, 2048, 1536, 1980, 2200, 2100],
            backgroundColor: '#28a745'
          }]
        },
        options: {
            responsive: true,
          plugins: {
            title: {
              display: true,
              text: 'Memory Usage (MB)'
            }
          }
        }
      });
    }

    function loadWorkloadStatusPieCharts() {
      // Replace below dummy values with actual API calls
      const deploymentStats = { running: 4, failed: 1 };
      const podStats = { running: 6, failed: 2 };
      const replicaStats = { running: 3, failed: 0 };

      createPieChart('deploymentStatusChart', deploymentStats, 'Deployments');
      createPieChart('podStatusChart', podStats, 'Pods');
      createPieChart('replicaSetStatusChart', replicaStats, 'ReplicaSets');
    }

    function createPieChart(canvasId, data, label) {
      new Chart(document.getElementById(canvasId), {
        type: 'pie',
        data: {
          labels: ['Running', 'Failed'],
          datasets: [{
            label,
            data: [data.running, data.failed],
            backgroundColor: ['#28a745', '#dc3545']
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              position: 'bottom'
            },
            title: {
              display: true,
              text: label + ' Status'
            }
          }
        }
      });
    }

    window.onload = function () {
      loadCharts();
      loadWorkloadStatusPieCharts();
    };
  </script>
</body>
</html>
